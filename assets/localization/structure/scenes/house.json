{
    "start": {
        "root": {
            "type": "text",
            "character": "player",
            "next": "startSearch"
        },
        "startSearch": {
            "type": "event",
            "events": [
                {
                    "name": "startSearch"
                }
            ]
        }
    },

    "search": {
        "root": {
            "type": "text",
            "character": "player",
            "next": "checkEducation"
        },
        "checkEducation": {
            "type": "choice",
            "choices":[
                { "next": "checkCV1" }
            ]
        },
        "checkCV1": {
            "type": "event",
            "events": [
                {
                    "name": "checkCV"
                }
            ],
            "next": "educationComplete"
        },
        
        "educationComplete": {
            "type": "text",
            "character": "player",
            "next": "restartPoint"
        },
        "restartPoint": {
            "type": "text",
            "character": "player",
            "next": "checkLanguages"
        },
        "checkLanguages": {
            "type": "choice",
            "choices":[
                { "next": "checkCV2" },
                { "next": "wrongAnswer1" },
                { "next": "languagesComplete" },
                { "next": "wrongAnswer1" }
            ]
        },
        "checkCV2": {
            "type": "event",
            "events": [
                {
                    "name": "checkCV"
                }
            ],
            "next": "checkLanguages"
        },
        "wrongAnswer1": {
            "type": "event",
            "events": [
                {
                    "name": "wrongAnswer"
                }
            ],
            "next": "languagesComplete"
        },
        
        "languagesComplete": {
            "type": "text",
            "character": "player",
            "next": "checkSkills"
        },
        "checkSkills": {
            "type": "choice",
            "choices":[
                { "next": "checkCV3" },
                { "next": "wrongAnswer2" },
                { "next": "wrongAnswer2" },
                { "next": "skillsComplete" }
            ]
        },
        "checkCV3": {
            "type": "event",
            "events": [
                {
                    "name": "checkCV"
                }
            ],
            "next": "checkSkills"
        },
        "wrongAnswer2": {
            "type": "event",
            "events": [
                {
                    "name": "wrongAnswer"
                }
            ],
            "next": "skillsComplete"
        },

        "skillsComplete": {
            "type": "text",
            "character": "player",
            "next": "checkSkills2"
        },
        "checkSkills2": {
            "type": "choice",
            "choices":[
                { "next": "checkCV4" },
                { "next": "wrongAnswer3" },
                { "next": "skills2Complete" },
                { "next": "wrongAnswer3" }
            ]
        },
        "checkCV4": {
            "type": "event",
            "events": [
                {
                    "name": "checkCV"
                }
            ],
            "next": "checkSkills2"
        },
        "wrongAnswer3": {
            "type": "event",
            "events": [
                {
                    "name": "wrongAnswer"
                }
            ],
            "next": "skills2Complete"
        },
        
        "skills2Complete": {
            "type": "text",
            "character": "player",
            "next": "checkAvailability"
        },
        "checkAvailability": {
            "type": "choice",
            "choices":[
                { "next": "checkCV5" },
                { "next": "checkErrors" },
                { "next": "wrongAnswer4" },
                { "next": "wrongAnswer4" }
            ]
        },
        "checkCV5": {
            "type": "event",
            "events": [
                {
                    "name": "checkCV"
                }
            ],
            "next": "checkAvailability"
        },
        "wrongAnswer4": {
            "type": "event",
            "events": [
                {
                    "name": "wrongAnswer"
                }
            ],
            "next": "checkErrors"
        },

        "checkErrors": {
            "type": "condition", 
            "conditions": [
                {
                    "next": "noOffers",
                    "errors": {
                        "value": 3,
                        "operator": "greater",
                        "global": false,
                        "default": 0
                    }
                },
                {
                    "next": "offersFound"
                }
            ]
        },

        "noOffers": {
            "type": "text",
            "character": "player",
            "next": "restart"
        },
        "restart": {
            "type": "event",
            "events": [
                {
                    "name": "restart",
                    "variable": "errors",
                    "global": false,
                    "value": 0
                }
            ],
            "next": "restartPoint"
        },

        "offersFound": {
            "type": "event",
            "events": [
                {
                    "name": "offersFound"
                }
            ],
            "next": "findOffers"
        },
        "findOffers": {
            "type": "text",
            "character": "player"
        }
    },

    "selectProgrammingOffer": {
        "root": {
            "type": "text",
            "character": "player",
            "next": "askConfirmation"
        },
        "askConfirmation": {
            "type": "event",
            "events": [
                {
                    "name": "askConfirmation"
                }
            ]
        }
    },
    "selectDataOffer": {
        "root": {
            "type": "text",
            "character": "player",
            "next": "askConfirmation"
        },
        "askConfirmation": {
            "type": "event",
            "events": [
                {
                    "name": "askConfirmation"
                }
            ]
        }
    },

    "askConfirmation": {
        "root": {
            "type": "choice",
            "choices":[
                { "next": "confirm" },
                {  }
            ]
        },
        "confirm": {
            "type": "text",
            "character": "player",
            "next": "end"
        },
        "end": {
            "type": "event",
            "events": [
                {
                    "name": "end"
                }
            ]
        }
    }
}